@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
       <div class=" col-6">
        <h2 class="text-primary">Cover Type List</h2>
       </div> 
       <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                Create New Cover Type &nbsp; <i class="bi bi-plus-circle-dotted"></i>
            </a>
       </div>
    </div>
    <br /><br />
<table class="table table-bordered table-striped" style="width:100%" >
    <thead>
        <tr>
            <th>
                    Cover Type Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tcody> 
            @foreach(var obj in Model)
            {
                <tr> 
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="25%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2">Edit <i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2">Delete <i class="bi bi-trash3"></i></a>
                        </div>
                    </td>
                </tr>
            }
    </tcody>
</table>
</div>
